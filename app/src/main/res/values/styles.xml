<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>

    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_smallTextBlack">
        <item name="android:color">@color/black</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="style_smallText">
        <item name="android:color">@color/black</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>


    <style name="style_smallTextWhite" parent="Widget.AppCompat.TextView">
        <item name="android:color">@android:color/white</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="style_editText_alert_box">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:layout_margin">13dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="style_editText">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="style_BlackTextSmall">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>


    <style name="style_BlackTextMedium">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>


    <style name="style_BlackTextLarge">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/Green</item> <!-- Whatever color you want-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="login_screen" parent="Widget.AppCompat.EditText">

        <item name="queryBackground">@color/colorPrimary</item>
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">Search Application ID</item>

        <item name="android:textColorHint">@color/lightGray</item>

        <item name="colorAccent">@color/white</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <!--        <item name="searchIcon">@drawable/ic_search_black_24dp</item>-->
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@color/colorPrimary</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">Search Application ID</item>

        <item name="android:textColorHint">@color/lightGray</item>

        <item name="colorAccent">@color/white</item>
    </style>

    <style name="custom_alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Gets rid of the search icon -->
        <!-- Gets rid of the "underline" in the text -->
        <item name="android:background">@color/white</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->

        <item name="android:textColorHint">@color/white</item>

        <item name="colorAccent">@color/white</item>
    </style>

    <style name="custom_alert1" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Gets rid of the search icon -->
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@color/Red</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->

        <item name="android:textColorHint">@color/black</item>

        <item name="colorAccent">@color/Orange</item>
    </style>

    <style name="Theme.SwitchDateTime.HeaderBackground">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Theme.SwitchDateTime" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimaryInverse">#e6e6e6</item>
        <item name="android:textColorSecondaryInverse">#e1e1e1</item>
    </style>


    <!-- Content Background -->
    <style name="Theme.SwitchDateTime.ContentBackground">
        <item name="android:background">#00ffffff</item>
    </style>

    <!-- Date Label -->
    <style name="Theme.SwitchDateTime.DateLabelMonthAndDay">
        <item name="android:textSize">@dimen/medium_textSize</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
    </style>

    <!-- Date -->
    <style name="Theme.SwitchDateTime.Date"></style>
    <!-- Base application theme. -->
    <style name="MyAppCustomTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
